<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Cleaning Lady List{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Checklist for migrating PHP projects">
    <meta name="keywords" content="Cleaning lady list, php migration, Rector">
    <meta name="robots" content="index, nofollow">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="language" content="English">

    {% block stylesheets %}
        <link rel="icon" type="image/png" href="{{ asset('images/CLL-logo.png') }}"/>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;400;700;900&display=swap"
              rel="stylesheet">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="brand-link" href="{{ path('project.new') }}">
            <img src="{{ asset('images/CLL-logo.png') }}" alt="">
            Cleaning Lady List
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('project.new') }}">Create</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

{% for alert in app.flashes('success') %}
    <div class="notification success">
        <div>{{ alert }}</div>
        <a class="icon-btn-link notification-btn">
            <i class="material-icons">close</i>
        </a>
    </div>
{% endfor %}

{% for alert in app.flashes('warning') %}
    <div class="notification warning">
        <div>{{ alert }}</div>
        <a class="icon-btn-link notification-btn">
            <i class="material-icons">close</i>
        </a>
    </div>
{% endfor %}

{% for alert in app.flashes('error') %}
    <div class="notification error">
        <div>{{ alert }}</div>
        <a class="icon-btn-link notification-btn">
            <i class="material-icons">close</i>
        </a>
    </div>
{% endfor %}


{% block body %}{% endblock %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="{{ asset('js/symfony-ajax.js') }}"></script>
    <script>

        $(document).ready(function () {
            $(".notification-btn").on("click", function (e) {
                e.preventDefault();
                $(this).parent().remove();
            })
        });
    </script>
{% endblock %}
</body>
</html>
